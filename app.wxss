/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.any{
  height: 5rpx;
  background: #f1f1f1;
  box-shadow: 0 5prx rgba(0,0,0,0.1) inset; 
}
.any1{
  height: 20rpx;
  background: #f1f1f1;
  box-shadow: 0 5prx rgba(0,0,0,0.1) inset;
}
.star-after{
  color: #ccc;
}
.star-before{
  color: #f90;
  position: absolute;
  top: 579px;
  left: 20;
  width: 20%;
  overflow: hidden;
}
.arrow{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.arrow::after{
  content: "";
  width: 15rpx;
  height: 15rpx;
  border-top: 3rpx solid #ccc;
  border-right: 3rpx solid #ccc;
  transform: rotate(45deg)
}

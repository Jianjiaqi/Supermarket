  color: #81D740;
}

.detalis_img{
  display: flex;
  position: absolute;
  right: 25rpx;
}
.detalis_img navigator:nth-child(1){
  margin-right: 50rpx;
}
.detalis_img input{
  width: 400rpx;
  height: 40rpx;
  font-size: 12px;
  text-align: start;
  margin-right:100rpx; 
  border: 1px solid #EFEFF2;
  padding-left: 10rpx;
}
.detalis_img image{
  width: 75rpx;
  height: 75rpx;
}
.cart2{
  display: flex;
  flex-direction: column;
}
.cart2>text{
  display: block;
}
.cart2_img text{
  display: block;
  width: 50rpx;
  height: 50rpx;
  font-size: 13px;
  font-weight: bold;
  text-align: center;
  border-radius: 100%;
  background: #AB956C;
  position: relative;
  right: -490rpx;
  top: 60rpx;
  z-index: 10;
}
.cart2_img image{
  width: 120rpx;
  height: 120rpx;
  position: relative;
  right: -450rpx;
}
.cart2_img image:last-child{
  margin-left: 50rpx;

}
.goods1{
  text-align: center;
}
.goods1 image{
  width: 350rpx;
  height: 350rpx;
}
.cart_list{
  width: 90%;
  height: 100rpx;
  background: #AB956C;
  margin-top: 50rpx;
  margin-left: 40rpx;
  border-radius:60rpx;
}
.cart_list view{
  display: flex;
  justify-content: space-around;
}
.cart_list navigator{
  margin-top: 25rpx;
}
.cart_list text{
  font-size: 13px;
  font-weight: bold;
  color:#fff;
  margin-top: 30rpx;
}
.cart_list  image{
  width: 75rpx;
  height: 75rpx;
  margin-top: 11rpx;
}
.text_list{
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-content: center;
  text-align: center;
}
.text_list text{
  font-size: 14px;
  margin: 15rpx;
  font-weight: bold;
  color: #767676;
}
.message{
  display: block;
  width: 35rpx;
  height: 35rpx;
  text-align: center;
  color: #fff;
  border-radius: 20rpx;
  padding-bottom: 5rpx;
  background: rgba(255,0,0,01);
  position: absolute;
  right: 22rpx;
  top: 22rpx;
}
.monery{
  display: flex;
  width: 70%;
  height: 55rpx;
  margin-top:20rpx;
  padding: 10rpx;
  border-top-right-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  background: rgb(0, 0, 0);
}
.monery text{
  font-size: 11px;
  color: #fff;
}
.monery>text{
  margin-top: 10rpx;
}
.monery navigator{
  margin-left: 35rpx;
  margin-top: -5rpx;
}

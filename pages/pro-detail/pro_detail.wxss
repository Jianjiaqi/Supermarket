  display: block;
  width: 120rpx;
  margin-top: 20rpx;
  background: #34EA0A;
  border-radius: 10rpx;
}
.monery image{
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  right: 190rpx;
  top: 75rpx;
}
.monery_list{
  display: block;
  position: relative;
  left: 550rpx;
  top: -65rpx;
}
.monery_list text{
  font-size: 12px;
  padding: 5rpx 10rpx;
  color: rgb(243, 81, 83);
  background-color: #FFF0F0 ;
  border: 1px solid rgb(243, 81, 83);
}
.sale{
  display: flex;
  justify-content: space-between;
}
.sale text{
  margin: 0 35rpx 20rpx 35rpx;
  font-size: 13px;
  font-weight: bold;
  color: #767676;
}
.explain{
  display: flex;
  justify-content: space-around;
  margin: 15rpx;
}
.explain text{
  font-size: 13px;
}
.explain>text{
  margin-top: 10rpx;
}
.check{
  margin: 30rpx 40rpx 30rpx 40rpx;
  display: flex;
  justify-content: space-between;
}
.check text{
  font-size: 13px;
}
.review{

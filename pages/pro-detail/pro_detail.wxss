  box-shadow: 1rpx 1rpx 1rpx #ccc;
}
.review_1 text{
  font-size: 12px;
  color: #767676;
}
.review>text{
  font-size: 12px;
  color: #767676;
  margin-top: 10rpx;
}
.review_1 text{
  font-size: 14px;
  margin-left: 30rpx;
}
.review_1 view{
  display: flex;
  margin-left: 40rpx;
  margin-top: 35rpx;
}
.review_1 view image{
  width: 150rpx;
  height: 150rpx;
}

/* pages/pro-list/pro_list.wxss */
.pro_list{
  display: flex;
  text-align: center;
}
.pro_left{
  width:20%;
  border-right:1px solid #ccc;
}
.pro_left .pro_item{
  padding:5px;
  color:#3c3c3c;
  font-size:1rem;
}
.pro_left .active{
  color:#AB956D;
  border-left:2px solid #AB956D;
}
.pro_right{
  width:80%;
  min-height:100vh;
}
.pro_right .list_banner{
  height:100px;
}
.pro_right .list_banner>image{
  width: 100%;
  height: 100%;
}
.pro_right .pro_type{
  margin:10px 0;
  color: #AB956D;
}
.pro_type::before{
  content:"——";
  display: inline-block;
  margin-right: 10px;

}
.pro_type::after{
  content:"——";
  display: inline-block;
  margin-left: 10px;
}
.pro_lists{
  display: flex;
  flex-wrap: wrap;
  justify-content:left;
}
.pro_lists .pro_list{
  width:32%;
  height:100px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}
.pro_list image{
  width:40px;
  height: 40px;
  margin-bottom:10px;
}
.pro_list text{
  font-size:12px;
  color: #333;
}


/* miniprogram/pages/home/home.wxss */
.slider,.slider image,.slider swiper{
  width:100%;
  height:390rpx;
}
.word{
  padding:12px 0;
  text-align:center;
  color:#ab956c;
  font-size:16px;
  width:100%;
}
.foods{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  align-items:center;
}
/*任何机型的宽度都是750rpx*/
.foods navigator{
  width:374rpx;
  margin-bottom:10px;
  height:374rpx;
}
.foods image{
  width:100%;
  height:374rpx;/*图片的宽度为187px*/
  vertical-align: top;
}
.foods navigator:nth-child(3){
  width:750rpx;
  margin-bottom:10px;
}
.foods .foods-img{
  width:324rpx;
  height:324rpx;
  text-align: center;/*162px*/
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #F5F6F5;
  border-radius:10px;
  font-size:15px;
  color:gray;
}
.foods .foods-img:nth-child(n){
  margin-left:35rpx;
}
.foods .foods-img:nth-child(2n){
  margin-right:35rpx;
}
.foods .foods-img image{
  width:174rpx;/*174rpx*/
  height:174rpx;
  margin-bottom:20rpx;
  margin-top:20rpx;
}
/*在微信小程序（机型iphone6）里面1px = 2rpx*/
.btn{
  margin:20rpx 10rpx;  
}
.btn .btn-item{
  height:48rpx;
  line-height: 48rpx;
  color:gray;
  font-size:18px;
  border-radius:50rpx;       
}

